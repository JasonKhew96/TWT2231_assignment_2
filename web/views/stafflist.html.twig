{% set title = 'Staff List' %}
{% extends 'base.html.twig' %}
{% block body %}
    <ul class="nav nav-tabs justify-content-center">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('index') }}">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="{{ path('stafflist') }}">Staff List</a>
        </li>
        <li class="nav-item">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="nav-link" href="{{ path('logout') }}">Logout</a>
            {% else %}
                <a class="nav-link" href="{{ path('login') }}">Login</a>
            {% endif %}
        </li>
    </ul>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <input class="form-control" id="myInput" type="text" placeholder="Search..">
            <table class="table table-striped ">
                <thead>
                    <tr>
                        <th scope="col">Staff ID</th>
                        <th scope="col">First name</th>
                        <th scope="col">Last name</th>
                        <th scope="col">Details</th>
                        <th scope="col">Payrolls</th>
                    </tr>
                </thead>
                <tbody>
                {% for staff in stafflists %}
                    <tr>
                        <th scope="row">{{ staff.staff_id }}</th>
                        <td>{{ staff.first_name }}</td>
                        <td>{{ staff.last_name }}</td>
                        <td><a href="{{ path('staff', {'id': staff.staff_id}) }}" class="btn btn-primary btn-sm active" role="button">Details</a></td>
                        <td><a href="{{ path('staffpayroll', {'id': staff.staff_id}) }}" class="btn btn-primary btn-sm active" role="button">Payrolls</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <script src="/js/filter.js"></script>
{% endblock %}
